#!/bin/sh

# This is a wrapper script for lf that allows it to create image previews.
# This works in concert with the lf configuration file and the lf-cleaner script.

set -e

cleanup() {
  exec 3>&-
  rm "$FIFO_WAYLAND"
}

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
  lf "$@"
else
  [ ! -d "$HOME/.cache/lf" ] && mkdir -p "$HOME/.cache/lf"
  export FIFO_WAYLAND="$HOME/.cache/lf/wayland-$$"
  mkfifo "$FIFO_WAYLAND"
  # Replace ueberzug with a Wayland-compatible command
  # For example, using wpg or swaybg
  # wpg --bg-fill <image_path> &
  exec 3>"$FIFO_WAYLAND"
  trap cleanup HUP INT QUIT TERM PWR EXIT
  lf "$@" 3>&-
fi
